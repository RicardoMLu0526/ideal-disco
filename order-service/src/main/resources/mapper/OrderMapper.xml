<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pdd.order.mapper.OrderMapper">
    <select id="selectByUserId" resultType="com.pdd.order.entity.Order">
        SELECT * FROM `order` WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>
    
    <select id="selectByOrderNo" resultType="com.pdd.order.entity.Order">
        SELECT * FROM `order` WHERE order_no = #{orderNo}
    </select>
</mapper>